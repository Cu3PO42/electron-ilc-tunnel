{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "./**/*.ts",
        "!./**/*.d.ts"
        "./**/*.tsx",
        "!./node_modules/**/*"
    ],
    "files": [
        "./client.ts",
        "./index.ts",
        "./server-class.ts",
        "./server.ts",
    ],
    "package": "./package.json"
}
